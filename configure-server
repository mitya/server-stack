SPRINKLE_CONFIGS_DIR="/users/dima/code/passenger-stack/config"
EC2_PK_PATH="/users/dima/.ssh/id_demo"

cat <<-DEPLOY > $SPRINKLE_CONFIGS_DIR/deploy.rb
  set :user, "root"
  set :ssh_options, {:keys => ["$EC2_PK_PATH"]}
  server '$1', :web, :app, :db, :primary => true
DEPLOY
sprinkle -v -s $SPRINKLE_CONFIGS_DIR/install.rb
